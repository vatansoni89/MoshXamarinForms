<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.Instagram">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0,20,0,0">
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout BackgroundColor="White">
        <Label Text="nyc_photographer" />
        <Image Source="http://lorempixel.com/1920/1080/nature/3/" />
        <StackLayout Orientation="Horizontal">
            <Button Text="Like" TextColor="Blue" FontSize="8" BackgroundColor="White" />
            <Button Text="Comment"  TextColor="Blue" FontSize="8" BackgroundColor="White" />
            <Button Text="Share"  TextColor="Blue" FontSize="8" BackgroundColor="White" />
        </StackLayout>
        <BoxView Color="#f0f0f0" HeightRequest="1" />
        <Label Text="700 likes" TextColor="black" />
        <Label Text="In the Shreve High football stadium, I think of Polacks nursing long beers in Tiltonsville,
            And gray faces of Negroes in the blast furnace at Benwood,
            And the ruptured night watchman of Wheeling Steel,
            Dreaming of heroes." />
    </StackLayout>
</ContentPage>